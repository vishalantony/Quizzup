<% provide(:title, "Quiz #{@count}") %>

<h1>Enter quiz details:</h1>

<%= form_for(@quiz) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name, value: 'Enter quiz name: ' %>
	<%= f.text_field :name, class: 'form-control', value: @quiz_name, readonly: true %>


	<%= f.label :end_time, value: 'End time (in Minutes)' %>
	<%= f.select :end_time, options_for_select(@durations), class: 'form-control' %>

	<%= f.label :questions, "Topics to take questions from" %>
	<%= f.select :questions, options_for_select(@followed_topics.collect{ |u| [u.name, u.id] }), {prompt: 'Select topics'}, {multiple: true, size: 5,  class: 'form-control'} %>

	<%= f.submit 'Start Quiz', class: 'btn btn-primary' %>
<% end %>